<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="il.ac.shenkar.doitsimple.WelcomeActivity" >

    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/splash" />

    <TextView
        android:id="@+id/Developers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/Tomer"
        android:layout_marginBottom="20dp"
        android:text="Developed By : "
        android:textSize="24dp"
        android:textColor="@color/white"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/Tomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100dp"
        android:text="Tomer Luster"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Chen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Tomer"
        android:layout_alignBottom="@+id/Tomer"
        android:layout_alignParentRight="true"
        android:text="Chen Shamir"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>